<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_ocean"
        android:layout_width="268dp"
        android:layout_height="308dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="212dp"
        android:onClick="knock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ocean" />

    <Button
        android:id="@+id/button"
        android:layout_width="202dp"
        android:layout_height="67dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="#4D9DFF"
        android:fontFamily="@font/allan_bold"
        android:onClick="reset"
        android:shadowColor="#58E1F3"
        android:text="Reset"
        android:textColor="#000000"
        android:textColorHighlight="#3DE1F6"
        android:textColorHint="#62EDFF"
        android:textColorLink="#32E6FD"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_counter"
        app:rippleColor="#31DAEF"
        app:strokeColor="#63EDFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="67dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="39dp"
        android:background="#ADE9F1"
        android:backgroundTint="#B7DCF8"
        android:backgroundTintMode="multiply"
        android:fontFamily="@font/allan_bold"
        android:includeFontPadding="false"
        android:text="Click on the picture"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ocean"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_counter"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="144dp"
        android:background="#6985BC"
        android:backgroundTint="#77C3FF"
        android:backgroundTintMode="multiply"
        android:fontFamily="@font/allan_bold"
        android:text="10"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ocean" />

</androidx.constraintlayout.widget.ConstraintLayout>